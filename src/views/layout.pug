    link(rel="stylesheet", href="https://fonts.googleapis.com/css?family=Montserrat:300,400,600&display=swap")
    link(rel="stylesheet", href="/css/reset.css")
    link(rel="stylesheet", href="/css/style.css")
    link(rel="stylesheet", href="/css/container/container.css")
    link(rel="stylesheet", href="/css/button/button.css")
    link(rel="stylesheet", href="/css/form/form.css")
    link(rel="stylesheet", href="/css/form/form-group.css")
    link(rel="stylesheet", href="/css/form/form-input.css")
    link(rel="stylesheet", href="/css/form/form-label.css")
    link(rel="stylesheet", href="/css/form/form-link.css")
    link(rel="stylesheet", href="/css/title/title.css")
    link(rel="stylesheet", href="/css/subtitle/subtitle.css")
    link(rel="stylesheet", href="/css/message/message.css")
    link(rel="stylesheet", href="/css/navbar/navbar.css")
    link(rel="stylesheet", href="/css/navbar/navbar-item.css")
    link(rel="stylesheet", href="/css/navbar/navbar-items.css")
    link(rel="stylesheet", href="/css/navbar/navbar-label.css")
    link(rel="stylesheet", href="/css/navbar/navbar-link.css")
    link(rel="stylesheet", href="/css/navbar/navbar-title.css")
    link(rel="stylesheet", href="/css/menu-button/menu-button.css")
    link(rel="stylesheet", href="/css/room/room.css")
    link(rel="stylesheet", href="/css/room/room-content.css")
    link(rel="stylesheet", href="/css/room/room-option.css")
    script(src="https://kit.fontawesome.com/a076d05399.js")
  body
    block content

    - if (messages.error)
      span(class="message message--error")= messages.error

    - if (messages.info)
      span(class="message message--info")= messages.info

    script.
      const menuButton = document.querySelector('.menu__button')

      menuButton.addEventListener('click', toggleMenu)

      const navbar = document.querySelector('.navbar')

      const overlay = document.querySelector('.overlay')

      overlay.addEventListener('click', toggleMenu)

      const inputs = document.querySelectorAll('.form__input')

      inputs.forEach(it => it.addEventListener('focus', onFocus))
      inputs.forEach(it => it.addEventListener('blur', onBlur))

      function toggleMenu() {
        navbar.classList.toggle('navbar--opened')
      }

      function onFocus() {
        this.classList.add('form__input--focus')
      }

      function onBlur() {
        if(this.value) return
        this.classList.remove('form__input--focus')
      }


    script(src="/socket.io/socket.io.js")

    block scripts
